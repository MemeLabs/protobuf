{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es6", "es2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
  },
  "include": [
    ".eslintrc.js",
    "lib/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
