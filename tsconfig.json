{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "removeComments": true,
    "rootDir": "src",
    "target": "es5"
  },
  "include": ["src"],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
